    <script>
        function monthDiff(dateFrom, dateTo) {
            return dateTo.getMonth() - dateFrom.getMonth() +
                (12 * (dateTo.getFullYear() - dateFrom.getFullYear()));
        }

        $(function () {
            var dateFormat = "dd-MM-yy",
                from = $("#from")
                    .datepicker({
                        dateFormat: 'dd-MM-yy',
                        defaultDate: "+1w",
                        changeMonth: true,
                        numberOfMonths: 2
                    })
                    .on("change", function () {
                        console.log("Selected date: " + getDate(this) + "; input current value: " + this.value);
                        index = monthDiff(new Date(), getDate(this));
                        calendarBase.svg("destroy");
                        calendarBase.svg(drawCalendar);
                        console.log(monthDiff(new Date(), getDate(this)));
                        to.datepicker("option", "minDate", getDate(this));
                    }),
                to = $("#to").datepicker({
                    dateFormat: 'dd-MM-yy',
                    defaultDate: "+1w",
                    changeMonth: true,
                    numberOfMonths: 2
                })
                    .on("change", function () {
                        from.datepicker("option", "maxDate", getDate(this));
                    });

            function getDate(element) {
                var date;
                try {
                    date = $.datepicker.parseDate(dateFormat, element.value);
                } catch (error) {
                    date = null;
                }

                return date;
            }
        });
    </script>
    <script>
